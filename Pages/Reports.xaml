<Page
	x:Class="SystemMonitoring.AdminPages.Reports"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	Title="Reports"
	Loaded="Page_Loaded"
	SizeChanged="Page_SizeChanged"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel
			Grid.Row="0"
			Grid.ColumnSpan="3"
			Margin="60,0,0,0"
			Orientation="Horizontal">
			<TextBox
				Name="FilePath"
				Width="500"
				Margin="5"
				md:HintAssist.Hint="Расположение файлов"
				md:HintAssist.IsFloating="True"
				TextChanged="FilePath_TextChanged" />
			<Button Click="Research_Click" Content="Обзор" />
		</StackPanel>

		<!--  TODO Delete ScrollViewers  -->
		<ScrollViewer
			Grid.Row="1"
			Grid.Column="0"
			Width="auto"
			MinHeight="300"
			VerticalScrollBarVisibility="Hidden">
			<StackPanel
				Name="ExcelPanel"
				Background="LightGreen"
				Orientation="Vertical" />
		</ScrollViewer>
		<ScrollViewer
			Grid.Row="1"
			Grid.Column="2"
			Width="auto"
			VerticalScrollBarVisibility="Hidden">
			<StackPanel
				Name="WordPanel"
				Background="LightBlue"
				Orientation="Vertical" />
		</ScrollViewer>

		<DataGrid
			Name="DgExcelFiles"
			Grid.Row="1"
			Grid.Column="0"
			Background="LightGreen">
			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding FileName}" Header="Название файла" />
				<DataGridTemplateColumn>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button Click="BtnOpenExcel_OnClick" Content="Открыть" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
		<DataGrid
			Name="DgWordFiles"
			Grid.Row="1"
			Grid.Column="2"
			Background="LightBlue">
			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding FileName}" Header="Название файла" />
				<DataGridTemplateColumn>
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Button Click="BtnOpenExcel_OnClick" Content="Открыть" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Page>